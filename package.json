{
  "name": "ghost-cursor",
  "author": {"name": "Evan Glasscock", "url": "https://evanglass.me"},
  "publisher": "evanglass",
  "displayName": "Ghost Cursor",
  "description": "Allows dropping ghost cursors which can later be activated for advanced multicursor editing.",
  "version": "0.0.1",
  "license": "MIT",
  "keywords": ["multicursor", "cursor", "editing"],
  "icon": "images/icon.png",
  "homepage": "https://github.com/evanglass/GhostCursor",
  "bugs": "https://github.com/evanglass/GhostCursor/issues",
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:ghost-cursor.dropGhost",
    "onCommand:ghost-cursor.activateGhosts"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ghost-cursor.dropGhost",
        "title": "Drop Ghost Cursor"
      },
      {
        "command": "ghost-cursor.activateGhosts",
        "title": "Activate Ghost Cursors"
      }
    ],
    "keybindings": [
      {
        "command": "ghost-cursor.dropGhost",
        "key": "ctrl+alt+a",
        "when": "editorTextFocus"
      },
      {
        "command": "ghost-cursor.activateGhosts",
        "key": "ctrl+alt+d",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production",
    "@vscode/test-electron": "^2.5.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/evanglass/GhostCursor.git"
  },
  "devDependencies": {
    "@types/vscode": "^1.105.0",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.0"
  }
}
